<div class="row">
  <div class="col login-signup">
    <form id="login-form">
      <h2>Login</h2>
      <div>
        <label for="username-login">Username:</label>
        <input type="text" id="username-login" />
      </div>
      <div>
        <label for="password-login">Password:</label>
        <input type="password" id="password-login" />
      </div>
      <div>
        <button class="btn btn-warning buttons" type="submit">Login</button>
      </div>
    </form>
  </div>

  <div class="col login-signup">
    <form id="signup-form">
      <h2>Sign Up</h2>
      <div>
        <label for="username-signup">Username:</label>
        <input type="text" id="username-signup" />
      </div>
      <div>
        <label for="password-signup">Password:</label>
        <input type="password" id="password-signup" />
      </div>
      <div>
        <button class="btn btn-warning buttons" type="submit">Signup</button>
      </div>
    </form>
    <script src="/js/login.js"></script>
  </div>

</div>